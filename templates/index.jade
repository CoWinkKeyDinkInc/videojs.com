extends layout

block content
  .banner
    .container
      .hero
        h3= locals.description
      .video
        video#home_video.video-js.vjs-default-skin(controls, preload='none', poster='/img/poster.png', data-setup='{"width":"auto", "height":"auto"}')
          source(src='http://vjs.zencdn.net/v/oceans.mp4', type='video/mp4')
          source(src='http://vjs.zencdn.net/v/oceans.webm', type='video/webm')
          track(kind='captions', src='/video-js/captions.vtt', srclang='en', label='English')
        #videoModifications
          p
            | Customize Me:
            a.colorPicker#iconPicker(href='#', data-color='#ccc') Icon Color
            a.colorPicker#progressPicker(href='#', data-color='#66A8CC') Progress Color
            a.colorPicker#backgroundPicker(href='#', data-color='rgba(0,0,0,0.7)', data-color-format='rgba') Background Color
            input#fontSize(type='text', class='span2', value='', data-slider-min='60', data-slider-max='300', data-slider-step='1', data-slider-value='100', data-slider-orientation='horizontal', data-slider-selection='after', data-slider-tooltip='hide')

      p Encoding and Dev support by: <a href="http://www.zencoder.com">Zencoder, Inc</a>. Video clip from: <a href="#">Disney Nature Oceans</a>.

  .social
    .container
      .buttons
        iframe(src="http://ghbtns.com/github-btn.html?user=videojs&repo=video.js&type=watch&count=true",
  allowtransparency="true", frameborder="0", scrolling="0", width="110", height="20")
        iframe(src="http://ghbtns.com/github-btn.html?user=videojs&repo=video.js&type=fork&count=true",
  allowtransparency="true", frameborder="0", scrolling="0", width="95", height="20")
        a(href="https://twitter.com/share", class="twitter-share-button", data-url="http://videojs.com", data-via="videojs", data-related="matt_mcclure") Tweet
        a(href="https://twitter.com/videojs", class="twitter-follow-button", data-show-count="true") Follow @videojs

  .container.benefits
    .row
      .span4
        img(src='/img/cloud.png', alt='cloud')
        h2 Designers
        ul
          li Style with the same CSS you know and love
          li Responsive design and retina displays supported
          li Built with FontAwesome
      .span4
        img(src='/img/cloud.png', alt='cloud')
        h2 Developers
        ul
          li Open Source and CDN hosted
          li Dead simple embed code using the video tag
          li JavaScript API that works everywhere
      .span4
        img(src='/img/cloud.png', alt='cloud')
        h2 Everyone
        ul
          li Free as in beer (gratis)
          li Crazy fast, less than 100k with no dependencies
          li Built by experts at at <a href="#">Brightcove</a> + <a href="#">Zencoder</a>

